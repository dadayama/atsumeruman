{
  "ignore": ["firebase.json", "**/.*", "node_modules/**", "data/**"],
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "."
  },
  "hosting": {
    "rewrites": [
      {
        "source": "**",
        "function": "default"
      }
    ]
  }
}
