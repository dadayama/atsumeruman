{
  "name": "pibot",
  "version": "1.0.0",
  "private": true,
  "description": "",
  "homepage": "https://github.com/dadayama/pibot#readme",
  "bugs": {
    "url": "https://github.com/dadayama/pibot/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/dadayama/pibot.git"
  },
  "author": "dadayama",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint --fix --ext .js,.ts .",
    "lint:ts": "tsc --noEmit",
    "build": "tsc",
    "serve": "NODE_ENV=development tsc-watch --onFirstSuccess 'firebase emulators:start --only functions'",
    "shell": "NODE_ENV=development tsc-watch --onFirstSuccess 'firebase functions:shell'",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions,hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "logs": "firebase functions:log",
    "test": "jest",
    "config:set": "ts-node ./scripts/set-config.ts",
    "config:load": "firebase functions:config:get > ./.runtimeconfig.json",
    "config:show": "firebase functions:config:get"
  },
  "dependencies": {
    "@slack/bolt": "^3.4.0",
    "express": "^4.17.1",
    "firebase-admin": "^11.0.1",
    "firebase-functions": "^3.14.1",
    "inversify": "^5.1.1",
    "just-safe-get": "^2.1.2",
    "node-fetch": "^2.6.7",
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.8.2"
  },
  "devDependencies": {
    "@types/config": "0.0.38",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/node-fetch": "^2.5.11",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "jest": "^27.0.5",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tsc-watch": "^4.4.0"
  },
  "engines": {
    "node": "14"
  }
}
